<h1><%= @article.title %></h1>
<h2>by <%= @article.user.name %></h2>

<p><%= link_to 'Edit this article', edit_user_article_path(@article.user, @article) %></p>

<p><%= @article.body %></p>

<h2>Comments</h2>

<p><%= link_to 'Create new comment', new_user_article_comment_path(@article.user, @article) %></p>

<% @article.comments.each do |comment| %>
  <p>(<%= time_ago_in_words(comment.created_at) %> ago) <%= comment.body %></p>
<% end %>
